<h1>id: <%= @task.id %> のメッセージ編集ページ</h1>
<%= form_for(message) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for(@task) do |f| %>
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>  
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  

  <%= f.submit '投稿' %>
<% end %>

